<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asu.edu.msse.gpeddabu.moviedescriptions.AddMovie">

    <EditText
        android:id="@+id/titleET"
        android:hint="Movie Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/yearET"
        android:hint="Year of Release"
        android:layout_below="@+id/titleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <EditText
        android:id="@+id/ratedET"
        android:hint="Rating"
        android:layout_below="@+id/yearET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/releasedOnET"
        android:hint="Released On"
        android:layout_below="@+id/ratedET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"/>

     <EditText
        android:id="@+id/runtimeET"
        android:hint="Run Time"
        android:layout_below="@+id/releasedOnET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/genreET"
        android:layout_below="@+id/runtimeET"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>

    <EditText
        android:id="@+id/actorsET"
        android:hint="Actors"
        android:layout_below="@+id/genreET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/plotET"
        android:hint="Plot"
        android:layout_below="@+id/actorsET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
    android:id="@+id/posterET"
    android:hint="Poster Url"
    android:layout_below="@+id/plotET"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posterET"
        android:text="@string/add"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:id="@+id/addButton"
        android:onClick="onAddButtonClick" />

</RelativeLayout>
</ScrollView>